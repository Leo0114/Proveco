---
import Layout from "../layouts/Layout.astro";
import HeroSlider from "@components/home/HeroSlider";
import { Slider } from "@constants/hero";
import OCard from "@components/try/OCard.astro";
import Content from "@components/try/Content.astro";
import FacebookSection from "@components/home/FacebookSection.astro";
import ContentGrid from "@components/home/ContentGrid.astro";
import { seoConfig } from "@constants/SEO";

const { keywords, description, title } = seoConfig.inicio;
---

<Layout title={title} description={description} keywords={keywords}>
  <HeroSlider slides={Slider} client:load />
  <Content />
  <ContentGrid />
  <OCard />
  <FacebookSection />
</Layout>
