---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
interface Props {
  name: string;
  image: ImageMetadata;
  phone: string;
  whatsapp: string;
  location: string;
}

const { name, image, phone, whatsapp, location } = Astro.props;
---

<div
  class="flex flex-col items-center justify-center gap-6 p-6 bg-fondo shadow-lg rounded-xl w-80 md:w-full mx-auto transition-all duration-300 hover:ring-2 hover:ring-primary hover:shadow-xl"
>
  {/* Título centrado sobre el contenido */}
  <h3 class="text-lg font-bold text-gray-800 w-full text-center mb-2">
    {name}
  </h3>

  <div
    class="flex flex-col md:flex-row justify-center items-center gap-6 md:gap-8 flex-wrap md:flex-nowrap"
  >
    <Image src={image} alt={name} class="w-40 h-40 object-cover rounded-lg" />
    <div class="flex flex-col items-center md:items-start gap-4">
      <a
        href={`tel:${phone}`}
        class="flex items-center gap-2 text-blue-500 hover:text-blue-700 transition-all"
      >
        <Icon name="facebook" size={24} />
        {phone}
      </a>
      <a
        href={`https://wa.me/${whatsapp}`}
        target="_blank"
        class="flex items-center gap-2 text-green-500 hover:text-green-700 transition-all"
      >
        <Icon name="facebook" size={24} />
        {whatsapp}
      </a>
    </div>
  </div>

  {/* Botón "Cómo llegar" con ícono de mapa */}
  <a
    href={location}
    target="_blank"
    class="mt-4 inline-flex items-center gap-2 px-4 py-2 bg-primary text-white rounded-full hover:bg-primary-dark transition-transform duration-200 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-primary"
  >
    <Icon name="facebook" size={24} />
    Cómo llegar
  </a>
</div>
