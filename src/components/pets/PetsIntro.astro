---
import Container from "@components/Container.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import mascotasHero from "@assets/images/dogs.webp";
---

<Container className="relative z-10">
  <section
    class="relative overflow-hidden rounded-[2.5rem] bg-gradient-to-b from-primary to-primary/10 shadow-2xl"
  >
    <!-- Hero Section -->
    <div
      class="grid lg:grid-cols-2 gap-12 items-center px-6 py-12 md:px-12 md:py-16 lg:px-24 lg:py-24"
    >
      <div class="space-y-8 text-white relative z-10">
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-extrabold leading-tight"
        >
          <span
            class="block mb-4 text-2xl md:text-3xl font-semibold text-secondary-light"
            >Bienestar Animal Premium</span
          >
          Todo lo que tu mascota necesita<br class="hidden lg:block" /> en un solo
          lugar
        </h1>

        <div
          class="grid gap-6 sm:grid-cols-3 items-center justify-center text-bluePrimary"
        >
          <div class="p-4 bg-white/10 backdrop-blur-sm rounded-xl">
            <Icon name={"veterinary"} class="w-12 h-12 mb-4 text-bluePrimary" />
            <h3 class="text-lg font-bold mb-2">Asesoría Veterinaria</h3>
            <p class="text-sm opacity-90">Profesionales certificados 24/7</p>
          </div>

          <div class="p-4 bg-white/10 backdrop-blur-sm rounded-xl">
            <Icon name={"garantia"} class="w-12 h-12 mb-4 text-bluePrimary" />
            <h3 class="text-lg font-bold mb-2">Calidad Garantizada</h3>
            <p class="text-sm opacity-90">Productos con certificación ISO</p>
          </div>

          <div class="p-4 bg-white/10 backdrop-blur-sm rounded-xl">
            <Icon name={"delivery"} class="w-12 h-12 mb-4 text-bluePrimary" />
            <h3 class="text-lg font-bold mb-2">Entrega Express</h3>
            <p class="text-sm opacity-90">Envío rápido en menos de 24h</p>
          </div>
        </div>
      </div>

      <div
        class="relative h-fit lg:h-fit rounded-3xl overflow-hidden shadow-xl"
      >
        <Image
          src={mascotasHero}
          alt="Mascotas felices con productos Proveco Pets"
          class="object-cover object-center"
          widths={[600, 800, 1200]}
          loading="lazy"
          quality={"mid"}
        />
      </div>
    </div>
  </section>
</Container>

<style>
  /* Optimizaciones específicas */
  section {
    view-transition-name: proveco-pets-hero;
  }

  @media (prefers-reduced-motion: no-preference) {
    [data-astro-transition-scope="proveco-pets"] * {
      view-transition-name: none !important;
    }
  }
</style>
