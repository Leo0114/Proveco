---
import { Image } from "astro:assets";
import logo from "@assets/logo.avif";
---

<section class="mb-20">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold text-gray-900">Nuestro Equipo</h2>
    <p class="mt-4 text-lg text-gray-600">
      Contamos con profesionales altamente cualificados y comprometidos con la
      excelencia veterinaria
    </p>
  </div>
  <div class="grid md:grid-cols-4 gap-8">
    {
      [1, 2, 3, 4].map((member) => (
        <div class="text-center">
          <div class="relative w-48 h-48 mx-auto mb-4 rounded-full overflow-hidden">
            <Image
              src={logo}
              alt="Miembro del equipo"
              class="object-cover w-full h-full"
            />
          </div>
          <h3 class="text-lg font-semibold text-gray-900">
            Nombre del Profesional
          </h3>
          <p class="text-gray-600">Cargo / Especialidad</p>
        </div>
      ))
    }
  </div>
</section>
